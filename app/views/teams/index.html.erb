<h1>On The Board: </h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Team</th>
			<% if @current_user %>
 				<th>Edit</th>
			<% end %>	
    </tr>
  </thead>
  <tbody>
		<% @team.each do |f| %>	
				<% if f.available %>
					<tr>
						<td><%= f.name %></td>
						<% if @current_user %>
							<td><%= link_to "Edit", edit_team_path(f.id) %></td>
						<% end %>	
					</tr>	
				<% end %>		
		<% end %>
	</tbody>
</table>		

<h1>Off The Board: </h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Team</th>
 			<th>Purchase Price</th>
			<th>Syndicate</th>
			<% if @current_user %>
				<th>Edit</th>
			<% end %>	
    </tr>
  </thead>
  <tbody>
		<% @team.each do |f| %>
			<% if !f.available %>
				<tr>
					<td><%= f.name %> </td>
					<td><%= number_to_currency(f.price.to_i, precision: 0) %></td>
					<td><%= link_to f.syndicate.name, syndicate_path(f.syndicate.id) %></td>
					<% if @current_user %>
						<td><%= link_to "Edit", edit_team_path(f.id) %></td>
					<% end %>	
				</tr>	
			<% end %>	
		<% end %>
	</tbody>
</table>	
	
<h1>Current Pot: <%= number_to_currency(@total, precision: 0)%> </h1>