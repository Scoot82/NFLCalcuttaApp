<h1>The "<%= @syndicate.name %>" Syndicate</h1>

<div class='pull-right'><%= link_to 'Return To Draft Board', root_path, class:"btn btn-primary btn-small" %></div>

<h3>Purchased Teams: </h3>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Team</th>
 			<th>Price</th>
    </tr>
  </thead>
  	<tbody>
			<% @syndicate.teams.each do |f| %>	
			<tr>
				<td><%= image_tag f.image_url(:thumb).to_s %> | <%= f.name %></td>
				<td><%= number_to_currency(f.price.to_i, precision: 0) %></td>
			<% end %>
			</tr>
		</tbody>	
	</thead>	
</table>

<h2>Total Spent: <%= number_to_currency(@total, precision: 0) %></h2>	

<%= content_tag :div, "", id: "teams_chart", data: {teams: @syndicate.teams} %>