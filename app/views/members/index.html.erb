<div class='container'>
	<div class="row">
		<div class="span12">
			<h1>Listing Members: </h1>
			<table class="table table-striped table-bordered table-condensed">
			  <thead>
			    <tr>
			      <th>Participant</th>
						<th>Syndicate</th>
						<th>% Ownership</th>
						<% if @current_user %>
			 				<th>Edit</th>
						<% end %>	
			    </tr>
			  </thead>
			  <tbody>
					<% @members.each do |f| %>
						<tr>
							<td><%= f.name %></td>
							<td><%= f.syndicate.name %></td>
							<td><%= f.ownership_percent %></td>
							<% if @current_user %>
								<td><%= link_to "Edit", edit_member_path(f.id) %></td>
							<% end %>
						</tr>	
					<% end %>
				</tbody>
			</table>	
		</div>
	</div>
	<% if @current_user %>
		<div class='center'><%= link_to 'Add Participant', new_member_path, class:"btn btn-primary btn-small" %></div>
	<% end %>	
</div>		